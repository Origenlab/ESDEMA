---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  items: Crumb[];
}

const { items } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    {items.map((item) => (
      <li>
        {item.href ? <a href={item.href}>{item.label}</a> : <span>{item.label}</span>}
      </li>
    ))}
  </ol>
</nav>
